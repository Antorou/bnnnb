<h1 class="text-3xl font-semibold mb-4"><%= @room.name %></h1>

<p class="mb-2 text-gray-700"><%= @room.description %></p>
<p class="mb-2 font-medium">Prix par nuit : <span class="text-blue-600"><%= @room.price_per_night %> €</span></p>
<p class="mb-6 font-medium">Max invités : <span class="text-blue-600"><%= @room.max_guests %></span></p>

<div class="space-x-3 mb-6">
  <% if user_signed_in? && current_user == @room.user %>
    <%= link_to "Modifier", edit_room_path(@room), class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded transition" %>
    <%= link_to 'Supprimer',
                room_path(@room),
                data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr de vouloir supprimer cette chambre ?' },
                class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded transition" %>

  <% elsif user_signed_in? %>
    <%= link_to "Réserver cette chambre", new_room_booking_path(@room), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition" %>

  <% else %>
    <p><%= link_to "Connecte-toi pour réserver", new_user_session_path, class: "text-blue-600 underline hover:text-blue-800" %></p>
  <% end %>
</div>

<%= link_to "← Retour à la liste", rooms_path, class: "text-gray-600 hover:text-gray-900 underline" %>
